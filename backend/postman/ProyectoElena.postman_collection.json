{
  "info": {
    "name": "ProyectoElena - Backend API",
    "_postman_id": "project-elena-collection",
    "description": "Colección de Postman para probar los endpoints del backend de ProyectoElena",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:8080",
      "description": "Base URL del backend (ajustar si se usa otro puerto o host)",
      "type": "string"
    },
    {
      "key": "actorId",
      "value": "actor-123",
      "type": "string"
    },
    {
      "key": "eventoId",
      "value": "evento-123",
      "type": "string"
    },
    {
      "key": "usuarioId",
      "value": "usuario-123",
      "type": "string"
    },
    {
      "key": "pagoId",
      "value": "pago-123",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Health - get",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/api/health",
          "host": ["{{baseUrl}}"],
          "path": ["api","health"]
        }
      },
      "response": []
    },
    {
      "name": "Auth - Registro usuario",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"user@example.com\",\n  \"nombreUsuario\": \"usuario123\",\n  \"password\": \"strongPassword123\"\n}"
        },
        "url": { "raw": "{{baseUrl}}/api/auth/registro", "host": ["{{baseUrl}}"], "path": ["api","auth","registro"] }
      }
    },
    {
      "name": "Eventos - Crear",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"actorId\": \"{{actorId}}\",\n  \"nombreEvento\": \"Charla sobre IA\",\n  \"descripcion\": \"Introducción a IA y ML\",\n  \"lugar\": \"Auditorio\",\n  \"fechaInicio\": \"2025-12-01T18:30:00Z\",\n  \"fechaFin\": \"2025-12-01T20:00:00Z\",\n  \"cupos\": 100,\n  \"categoriaId\": \"categoria-1\",\n  \"organizadoresIds\": [\"org-1\", \"org-2\"]\n}"
        },
        "url": { "raw": "{{baseUrl}}/api/eventos", "host": ["{{baseUrl}}"], "path": ["api","eventos"] }
      }
    },
    {
      "name": "Eventos - Editar (PUT)",
      "request": {
        "method": "PUT",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"actorId\": \"{{actorId}}\",\n  \"nombreEvento\": \"Charla editada\",\n  \"descripcion\": \"Descripción actualizada\",\n  \"lugar\": \"Sala B\",\n  \"fechaInicio\": \"2025-12-02T18:30:00Z\",\n  \"fechaFin\": \"2025-12-02T20:00:00Z\",\n  \"cupos\": 80,\n  \"categoriaId\": \"categoria-1\",\n  \"organizadoresIds\": [\"org-1\"]\n}"
        },
        "url": { "raw": "{{baseUrl}}/api/eventos/{{eventoId}}", "host": ["{{baseUrl}}"], "path": ["api","eventos","{{eventoId}}"] }
      }
    },
    {
      "name": "Eventos - Eliminar (DELETE)",
      "request": {
        "method": "DELETE",
        "url": {
          "raw": "{{baseUrl}}/api/eventos/{{eventoId}}?actorId={{actorId}}&confirmar=true",
          "host": ["{{baseUrl}}"],
          "path": ["api","eventos","{{eventoId}}"],
          "query": [
            { "key": "actorId", "value": "{{actorId}}" },
            { "key": "confirmar", "value": "true" }
          ]
        }
      }
    },
    {
      "name": "Eventos - Listar (GET)",
      "request": { "method": "GET", "url": { "raw": "{{baseUrl}}/api/eventos", "host": ["{{baseUrl}}"], "path": ["api","eventos"] } }
    },
    {
      "name": "Inscripciones - Inscribir",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": { "mode": "raw", "raw": "{\n  \"usuarioId\": \"{{usuarioId}}\",\n  \"eventoId\": \"{{eventoId}}\"\n}" },
        "url": { "raw": "{{baseUrl}}/api/inscripciones", "host": ["{{baseUrl}}"], "path": ["api","inscripciones"] }
      }
    },
    {
      "name": "Certificados - Emitir",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": { "mode": "raw", "raw": "{\n  \"eventoId\": \"{{eventoId}}\",\n  \"usuarioId\": \"{{usuarioId}}\",\n  \"actorId\": \"{{actorId}}\"\n}" },
        "url": { "raw": "{{baseUrl}}/api/certificados", "host": ["{{baseUrl}}"], "path": ["api","certificados"] }
      }
    },
    {
      "name": "Asistencias - Registrar",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": { "mode": "raw", "raw": "{\n  \"eventoId\": \"{{eventoId}}\",\n  \"usuarioId\": \"{{usuarioId}}\",\n  \"actorId\": \"{{actorId}}\",\n  \"asistio\": true\n}" },
        "url": { "raw": "{{baseUrl}}/api/asistencias", "host": ["{{baseUrl}}"], "path": ["api","asistencias"] }
      }
    },
    {
      "name": "Pagos - Registrar",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": { "mode": "raw", "raw": "{\n  \"usuarioId\": \"{{usuarioId}}\",\n  \"eventoId\": \"{{eventoId}}\",\n  \"monto\": 50.0,\n  \"metodoPago\": \"TARJETA\",\n  \"comprobanteUrl\": \"https://example.com/receipt.jpg\"\n}" },
        "url": { "raw": "{{baseUrl}}/api/pagos", "host": ["{{baseUrl}}"], "path": ["api","pagos"] }
      }
    },
    {
      "name": "Pagos - Validar (PUT)",
      "request": {
        "method": "PUT",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": { "mode": "raw", "raw": "{\n  \"adminId\": \"admin-1\",\n  \"aprobado\": true\n}" },
        "url": { "raw": "{{baseUrl}}/api/pagos/{{pagoId}}/validar", "host": ["{{baseUrl}}"], "path": ["api","pagos","{{pagoId}}","validar"] }
      }
    }
  ]
}
